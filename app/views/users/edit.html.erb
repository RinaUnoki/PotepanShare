  <h3>ユーザー編集</h3>
  <%= render "shared/error", obj: @user %>
 
    <%= form_for @user do |f| %>
      <table>
        <tr>
          <th><%= f.label :name ,"名前" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :email ,"メールアドレス" %></th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th><%= f.label :password ,"パスワード" %></th>
          <td><%= f.text_field :password %></td>
        </tr>
        <tr>
          <th><%= f.label :password_confirmation ,"パスワード確認" %></th>
          <td><%= f.text_field :password_confirmation %></td>
        </tr>
        <tr>
          <th><%= f.label :introduction ,"自己紹介" %></th>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <th><%= f.label :image_name, "プロフィール画像" %></th>
          <td><%= f.attachment_field :image_name %></td>
        </tr>
      </table>
      <div>
        <ul>
          <li><%= f.submit "編集を完了する" %></li>
          <li><%= link_to "トップに戻る", :users %></li>
        </ul>
      </div>
      <% end %>
    